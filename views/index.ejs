<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/main.css">
  <title>I'm Bored</title>
</head>

<body>
  <div class="container">
    <h1>Let's find something for you to do ✌️</h1>

    <form action="/" id="form" class="form" method="POST">
      <% let test=["education", "charity", "recreational", "relaxation", "busywork", "social", "diy", "music"] %>
      <select name="type" class="form-select">
        <option value="" data-display="Select">Random type</option>
      <% test.forEach(type => { %>
        <option value=<%= type %> data-display="Select"><%= type%></option>
      <% }); %>
      </select>

      <% let participants=[1,2,3,4] %>
      <select name="participants" class="form-select">
        <option value="">Any number of people</option>
      <% participants.forEach(number => { %>
        <option value=<%= number %> data-display="Select"><%= number%></option>
      <% }); %>
      </select>

      <button type="submit" class="form-submit">Go</button>
    </form>

    <% if (locals.data) { %>
      <section id="cards" class="cards">
        <article class="card-item">
          <h2 class="card-activity">
            <!-- Activity -->
             <%= data.activity %>
          </h2>
          <div class="card-info">
            <span class="card-type">
              <!-- Activity type -->
               <%= data.type %>
            </span>
            <span class="card-participants">
              <!-- participants: participant number -->
              <%= data.participants %>
              <span class="card-number"></span>
            </span>
          </div>
        </article>
      <% } %>
      <br>
      <% if (locals.error) { %>
        <div id="tag-error" class="tag-error">
          <!-- errors that were sent from the backend -->
          <%= error %>
        </div>
      <% } %>  
      

    </section>
  </div>

</body>

</html>